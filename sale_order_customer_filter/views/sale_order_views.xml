<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sale Order List View with Customer Filter -->
        <record id="sale_order_customer_filter_view" model="ir.ui.view">
            <field name="name">sale.order.customer.filter</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="create">true</attribute>
                    <attribute name="edit">true</attribute>
                    <attribute name="delete">true</attribute>
                </xpath>
            </field>
        </record>

        <!-- Sale Order Search View with Customer Filter -->
        <record id="sale_order_customer_search_view" model="ir.ui.view">
            <field name="name">sale.order.customer.search</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <filter string="Customer" name="group_by_customer" domain="[]" context="{'group_by': 'partner_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>