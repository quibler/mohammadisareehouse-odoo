<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Hide Tax Excluded and show Amount Due in invoice list view -->
    <record id="view_invoice_tree_amount_due" model="ir.ui.view">
        <field name="name">account.invoice.tree.amount.due.kuwait</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <!-- Hide Tax Excluded field -->
            <field name="amount_untaxed_in_currency_signed" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>
            <!-- Show Amount Due field -->
            <field name="amount_residual_signed" position="attributes">
                <attribute name="optional">show</attribute>
            </field>
        </field>
    </record>

    <!-- Hide asset_category_id and tax_ids fields in invoice form view -->
    <record id="view_move_form_hide_fields" model="ir.ui.view">
        <field name="name">account.move.form.hide.fields.kuwait</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Hide asset_category_id in invoice lines -->
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='asset_category_id']" position="attributes">
                <attribute name="column_invisible">True</attribute>
            </xpath>
            <!-- Hide tax_ids in invoice lines -->
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='tax_ids']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <!-- Hide asset_category_id in journal items -->
            <xpath expr="//field[@name='line_ids']/list/field[@name='asset_category_id']" position="attributes">
                <attribute name="column_invisible">True</attribute>
            </xpath>
            <!-- Hide tax_ids in journal items -->
            <xpath expr="//field[@name='line_ids']/list/field[@name='tax_ids']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_move_form_inherit_auto_stock" model="ir.ui.view">
        <field name="name">account.move.form.inherit.auto.stock</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Auto Stock Picking Button -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object"
                        name="action_view_auto_stock_picking"
                        class="oe_stat_button"
                        icon="fa-truck"
                        invisible="auto_stock_picking_count == 0">
                    <field name="auto_stock_picking_count" widget="statinfo" string="Stock Picking"/>
                </button>
            </xpath>

            <!-- Hidden fields -->
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="auto_stock_picking_id" invisible="1"/>
            </xpath>

            <!-- Make the currency conversion rate editable for vendor bills -->
            <xpath expr="//div[@name='currency_conversion_div']" position='replace'>
                <!-- Standard readonly conversion for non-vendor bills -->
                <div name="currency_conversion_div"
                     class="d-flex text-muted float-start"
                     invisible="currency_id == company_currency_id or move_type in ('in_invoice', 'in_refund', 'in_receipt')">
                    <span>1 </span>
                    <field name="company_currency_id" readonly="True" options="{'no_open': True}"/>
                    <span> = </span>
                    <field name="invoice_currency_rate" digits="[12,6]" readonly="True"/>
                    <span> </span>
                    <field name="currency_id" readonly="True" options="{'no_open': True}"/>
                </div>

                <!-- Editable conversion for vendor bills -->
                <div name="manual_currency_conversion_div"
                     class="d-flex text-muted float-start align-items-baseline"
                     style="gap: 4px;"
                     invisible="currency_id == company_currency_id or move_type not in ('in_invoice', 'in_refund', 'in_receipt')">
                    <span>1</span>
                    <field name="company_currency_id" readonly="True" options="{'no_open': True}"
                           style="width: auto; min-width: 40px; max-width: 50px;"/>
                    <span>=</span>
                    <field name="manual_currency_rate"
                           digits="[12,6]"
                           readonly="state != 'draft'"
                           placeholder="0.000000"
                           style="width: 120px; text-align: center; flex: 1; max-width: 160px;"/>
                    <field name="currency_id" readonly="True" options="{'no_open': True}"
                           style="width: auto; min-width: 40px; max-width: 50px;"/>
                </div>
            </xpath>

            <!-- Remove the separate manual rate field since it's now integrated -->
            <!-- Hidden fields for computation -->
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="is_manual_currency_rate" invisible="1"/>
            </xpath>

            <!-- Add company currency total in the subtotal footer -->
            <xpath expr="//group[@class='oe_subtotal_footer']/field[@name='amount_residual']" position='before'>
                <field name="amount_total_company_currency"
                       invisible="currency_id == company_currency_id or move_type not in ('in_invoice', 'in_refund', 'in_receipt')"
                       readonly="1"
                       string="Total (Company Currency)"/>
            </xpath>
        </field>
    </record>

    <!-- Tree view enhancement for vendor bills -->
    <record id="view_in_invoice_tree_inherit_enhanced" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.enhanced</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position='after'>
                <field name="manual_currency_rate" optional="hide"
                       invisible="not is_manual_currency_rate"
                       string="Exchange Rate"/>
            </xpath>
        </field>
    </record>
</odoo>