<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add Post Directly button to expense form -->
        <record id="hr_expense_view_form_direct_post" model="ir.ui.view">
            <field name="name">hr.expense.form.direct.post</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
            <field name="arch" type="xml">
                <button name="action_submit_expenses" position="after">
                    <button name="action_post_directly" 
                            string="Post Directly" 
                            type="object" 
                            class="btn-primary"
                            invisible="state not in ('draft', 'reported')"
                            groups="account.group_account_user"/>
                </button>
            </field>
        </record>
        
        <!-- Add Post Directly button to expense sheet form -->
        <record id="hr_expense_sheet_view_form_direct_post" model="ir.ui.view">
            <field name="name">hr.expense.sheet.form.direct.post</field>
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
            <field name="arch" type="xml">
                <button name="action_submit_sheet" position="after">
                    <button name="action_post_directly" 
                            string="Post Directly" 
                            type="object" 
                            class="btn-primary"
                            invisible="state not in ('draft')"
                            groups="account.group_account_user"/>
                </button>
            </field>
        </record>
    </data>
</odoo>