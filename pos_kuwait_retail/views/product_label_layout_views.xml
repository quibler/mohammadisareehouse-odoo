<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Delete the old custom price view record if it exists -->
        <delete id="product_label_layout_form_view_custom_price" model="ir.ui.view"/>

        <!-- Completely replace the print_format field with a read-only display -->
        <record id="product_label_layout_form_view_dymo_only_clean" model="ir.ui.view">
            <field name="name">product.label.layout.form.dymo.only.clean</field>
            <field name="model">product.label.layout</field>
            <field name="inherit_id" ref="product.product_label_layout_form"/>
            <field name="arch" type="xml">
                <field name="print_format" position="replace">
                    <!-- Hide the original field and set it to dymo automatically -->
                    <field name="print_format" invisible="1" force_save="1"/>
                    <!-- Show only "Format: Dymo" as a display -->
                    <div class="o_row">
                        <label for="print_format" string="Format"/>
                        <span>Dymo</span>
                    </div>
                </field>
            </field>
        </record>

    </data>
</odoo>