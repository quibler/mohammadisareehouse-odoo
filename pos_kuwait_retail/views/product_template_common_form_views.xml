<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Copy Product Tag IDs field from Sales tab to General Information section -->
        <record id="product_template_form_view_tags_general_info" model="ir.ui.view">
            <field name="name">product.template.form.tags.general.info</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <!-- Add the exact same field from sales tab after category in general information -->
                <field name="categ_id" position="after">
                    <field name="product_tag_ids" widget="many2many_tags" context="{'product_template_id': id}"/>
                    <field name="custom_label_price" placeholder="Custom price for labels"/>
                </field>
                <!-- Add shipment number at bottom of left column group (after product_tooltip) -->
                <field name="product_tooltip" position="after">
                    <field name="shipment_number" placeholder="e.g., SHIP-240322-001"/>
                </field>
            </field>
        </record>
        
        <!-- Restrict standard_price field visibility to POS and Stock admins only -->
        <record id="product_template_form_view_restrict_standard_price" model="ir.ui.view">
            <field name="name">product.template.form.restrict.standard.price</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <!-- Hide standard_price label for non-admin users -->
                <label for="standard_price" position="attributes">
                    <attribute name="groups">point_of_sale.group_pos_manager,stock.group_stock_manager</attribute>
                </label>
                <!-- Hide standard_price field and its container for non-admin users -->
                <div name="standard_price_uom" position="attributes">
                    <attribute name="groups">point_of_sale.group_pos_manager,stock.group_stock_manager</attribute>
                </div>
                <!-- Hide purchase taxes field -->
                <field name="supplier_taxes_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <!-- Hide sales taxes field -->
                <field name="taxes_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>

    </data>
</odoo>