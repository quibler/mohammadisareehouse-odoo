<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Complete override of Dymo template to hide barcode text and make all text bold -->
        <template id="report_simple_label_dymo_kuwait" inherit_id="product.report_simple_label_dymo">
            <!-- Replace the entire content with customized version -->
            <xpath expr="//div[@class='o_label_sheet o_label_dymo']" position="replace">
                <div class="o_label_sheet o_label_dymo" t-att-style="padding_page">
                    <div class="o_label_full" t-att-style="table_style">
                        <div class="text-start o_label_small_barcode">
                            <t t-if="barcode">
                                <!-- Keep barcode image with full width and increased height -->
                                <div t-out="barcode" style="padding:0;width:100%;" t-options="{'widget': 'barcode', 'quiet': 0, 'symbology': 'auto', 'img_style': 'width:100%;height:10mm'}"/>
                                <strong class="o_label_name" style="height:1.7em;background-color: transparent;font-size:1.5em">
                                    <span t-out="barcode"/>
                                </strong>
                            </t>
                        </div>

                        <!-- Make product name bold with larger font -->
                        <div style="height: 2.4em; font-size: 1.2em; line-height:1">
                            <strong t-if="product.is_product_variant" t-field="product.display_name"/>
                            <strong t-else="" t-field="product.name"/>
                        </div>

                        <!-- Create a proper baseline-aligned container -->
                        <div style="position: relative; padding: 2px; margin-top: 2px; height: 1.5em;">
                            <!-- Tags section - positioned absolutely to control baseline -->
                            <div style="position: absolute; left: 0; bottom: 0; max-width: 60%; overflow: hidden; white-space: nowrap;">
                                <strong t-foreach="product.product_tag_ids[:2]" t-as="tag">
                                    <span t-field="tag.name"/><t t-if="not tag_last">, </t>
                                </strong>
                            </div>

                            <!-- Price section - positioned absolutely to control baseline -->
                            <div style="position: absolute; right: 0; bottom: 0;">
                                <t t-if="custom_price">
                                    <strong style="font-size: 1.3em;"
                                            t-out="custom_price"
                                            t-options="{'widget': 'monetary', 'display_currency': product.currency_id, 'label_price': True}"/>
                                </t>
                                <t t-else="">
                                    <strong style="font-size: 1.3em;"
                                            t-out="pricelist._get_product_price(product, 1, pricelist.currency_id or product.currency_id)"
                                            t-options="{'widget': 'monetary', 'display_currency': pricelist.currency_id or product.currency_id, 'label_price': True}"/>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>