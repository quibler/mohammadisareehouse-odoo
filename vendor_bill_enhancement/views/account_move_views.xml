<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Enhanced Vendor Bill Form View - Comprehensive Customizations -->
    <record id="view_move_form_vendor_bill_enhanced" model="ir.ui.view">
        <field name="name">account.move.form.vendor.bill.enhanced</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Add line numbers to invoice lines -->
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='sequence']" position="after">
                <field name="line_number" string="#" width="40px"/>
            </xpath>

            <!-- Hide asset_category_id and tax_ids fields in invoice lines -->
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='asset_category_id']" position="attributes">
                <attribute name="column_invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='tax_ids']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>

            <!-- Hide asset_category_id and tax_ids fields in journal items -->
            <xpath expr="//field[@name='line_ids']/list/field[@name='asset_category_id']" position="attributes">
                <attribute name="column_invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']/list/field[@name='tax_ids']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>

            <!-- Add total product quantity display after invoice lines -->
            <xpath expr="//field[@name='invoice_line_ids']" position="after">
                <div class="row" invisible="move_type != 'in_invoice'">
                    <div class="col-12">
                        <div class="alert alert-info" role="alert" style="margin-top: 10px; padding: 10px;">
                            <strong>ðŸ“¦ Total Product Quantity: </strong>
                            <field name="total_product_quantity" nolabel="1" readonly="1" class="oe_inline"/>
                            <span> units</span>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>

    <!-- Enhanced Vendor Bill List View - Optimized Display -->
    <record id="view_invoice_tree_vendor_bill_enhanced" model="ir.ui.view">
        <field name="name">account.invoice.tree.vendor.bill.enhanced</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">

            <!-- Hide Tax Excluded field and Show Amount Due field -->
            <xpath expr="//field[@name='amount_untaxed_in_currency_signed']" position="attributes">
                <attribute name="column_invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_residual_signed']" position="attributes">
                <attribute name="optional">show</attribute>
            </xpath>

        </field>
    </record>

    <!-- Enhanced Customer Invoice List View - Add POS Sales Person -->
    <record id="view_out_invoice_tree_pos_sales_person" model="ir.ui.view">
        <field name="name">account.out.invoice.list.pos.sales.person</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <!-- Add POS Sales Person field after the existing Salesperson field -->
            <xpath expr="//field[@name='invoice_user_id']" position="after">
                <field name="pos_sales_person_id"
                       string="POS Sales Person"
                       optional="show"
                       widget="many2one_avatar_user"/>
                <field name="pos_order_general_note"
                       string="POS General Note"
                       optional="show"/>
            </xpath>
        </field>
    </record>

</odoo>