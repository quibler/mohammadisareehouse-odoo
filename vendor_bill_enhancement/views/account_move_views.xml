<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Enhanced Vendor Bill Form View - Minimal UI -->
    <record id="view_move_form_vendor_bill_enhanced_v4" model="ir.ui.view">
        <field name="name">account.move.form.vendor.bill.enhanced.v4</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Add line numbers to invoice lines - target the tree inside invoice_line_ids -->
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='sequence']" position="after">
                <field name="line_number" string="#" width="40px"/>
            </xpath>

            <!-- Add total product quantity display after invoice lines -->
            <xpath expr="//field[@name='invoice_line_ids']" position="after">
                <div class="row" invisible="move_type != 'in_invoice'">
                    <div class="col-12">
                        <div class="alert alert-info" role="alert" style="margin-top: 10px; padding: 10px;">
                            <strong>ðŸ“¦ Total Product Quantity: </strong>
                            <field name="total_product_quantity" nolabel="1" readonly="1" class="oe_inline"/>
                            <span> units</span>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>

</odoo>