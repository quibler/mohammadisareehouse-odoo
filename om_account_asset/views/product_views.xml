<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">Product Template (form)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="account.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="property_account_expense_id" position="after">
                <field name="asset_category_id"
                    domain="[('type', '=', 'purchase')]"
                    context="{'default_type': 'purchase'}"
                    groups="account.group_account_user"/>
            </field>
        </field>
    </record>

    <!-- Override product template actions to default to list view -->

    <!-- Stock Products Menu (Inventory → Products) -->
    <record id="stock.product_template_action_product" model="ir.actions.act_window">
        <field name="view_mode">list,kanban,form</field>
    </record>

    <!-- General Products Menu (Inventory → Products → Products) -->
    <record id="product.product_template_action_all" model="ir.actions.act_window">
        <field name="view_mode">list,kanban,form</field>
    </record>

    <!-- Product Template Action (various menus) -->
    <record id="product.product_template_action" model="ir.actions.act_window">
        <field name="view_mode">list,kanban,form</field>
    </record>

    <!-- Product Variants for Selling -->
    <record id="product.product_normal_action_sell" model="ir.actions.act_window">
        <field name="view_mode">list,kanban,form,activity</field>
    </record>

    <!-- Product Normal Action -->
    <record id="product.product_normal_action" model="ir.actions.act_window">
        <field name="view_mode">list,kanban,form,activity</field>
    </record>

    <!-- Stock Product Normal Action (already defaults to list first, ensuring consistency) -->
    <record id="stock.stock_product_normal_action" model="ir.actions.act_window">
        <field name="view_mode">list,kanban,form</field>
    </record>

    <!-- Point of Sale Product Template Action -->
    <record id="point_of_sale.product_template_action_pos_product" model="ir.actions.act_window">
        <field name="view_mode">list,kanban,form,activity</field>
    </record>

    <!-- Point of Sale Product Product Action -->
    <record id="point_of_sale.product_product_action" model="ir.actions.act_window">
        <field name="view_mode">list,kanban,form,activity</field>
    </record>

</odoo>