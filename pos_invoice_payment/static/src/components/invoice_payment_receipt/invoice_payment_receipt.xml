<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_invoice_payment.InvoicePaymentReceipt">
        <div class="pos-receipt">
            <!-- HEADER - Company Info -->
            <div class="receipt-section text-center">
                <img t-if="receipt.company.logo"
                     t-attf-src="data:image/png;base64,{{receipt.company.logo}}"
                     alt="Logo" class="w-100 mb-1"/>

                <!-- Company Info -->
                <div class="company-info">
                    <t t-if="receipt.company.street">
                        <div><t t-esc="receipt.company.street"/></div>
                    </t>
                    <t t-if="receipt.company.street2">
                        <div><t t-esc="receipt.company.street2"/></div>
                    </t>
                    <div t-if="receipt.company.city">
                        <t t-esc="receipt.company.city"/>
                        <t t-if="receipt.company.zip"> <t t-esc="receipt.company.zip"/></t>
                    </div>
                    <div t-if="receipt.company.phone" t-esc="receipt.company.phone"/>
                    <div t-if="receipt.company.email" t-esc="receipt.company.email"/>
                </div>
            </div>

            <!-- RECEIPT TITLE -->
            <div class="receipt-section text-center border-top border-bottom border-dark mt-2">
                <h4 class="my-2">INVOICE PAYMENT RECEIPT</h4>
            </div>

            <!-- INVOICE INFO -->
            <div class="receipt-section border-bottom border-dark">
                <div><strong>Invoice:</strong> <t t-esc="receipt.invoice_name"/></div>
                <div><strong>Payment Date:</strong> <t t-esc="receipt.payment_date"/></div>
                <div><strong>Payment Ref:</strong> <t t-esc="receipt.payment_name"/></div>
            </div>

            <!-- CUSTOMER INFO -->
            <div t-if="receipt.partner_name" class="receipt-section border-bottom border-dark">
                <div class="mb-1 small">
                    <strong>Customer: <t t-esc="receipt.partner_name"/></strong>
                </div>
            </div>

            <!-- PAYMENT DETAILS -->
            <div class="receipt-section">
                <table class="table table-sm table-borderless mb-0">
                    <tbody>
                        <tr class="border-bottom border-dark">
                            <td class="text-start ps-0"><strong>Amount Paid:</strong></td>
                            <td class="text-end pe-0">
                                <strong class="text-success">
                                    <t t-esc="receipt.currency_symbol"/> <t t-esc="formatAmount(receipt.amount_paid)"/>
                                </strong>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-start ps-0">Remaining Balance:</td>
                            <td class="text-end pe-0" t-att-class="receipt.remaining_balance &gt; 0 ? 'text-danger' : 'text-success'">
                                <t t-esc="receipt.currency_symbol"/> <t t-esc="formatAmount(receipt.remaining_balance)"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- STATUS -->
            <div class="receipt-section border-top border-dark text-center">
                <t t-if="receipt.remaining_balance &lt;= 0">
                    <div class="badge text-bg-success my-2">FULLY PAID</div>
                </t>
                <t t-else="">
                    <div class="badge text-bg-warning my-2">PARTIAL PAYMENT</div>
                </t>
            </div>

            <!-- FOOTER -->
            <div class="receipt-section text-center mt-3">
                <div>Thank you for your payment</div>
            </div>
        </div>
    </t>
</templates>
